# Server Configuration
SERVER_PORT=3001

# Client Configuration
CLIENT_PORT=3000
# Укажите через запятую список разрешенных origin для CORS-проверки
# Например: CLIENT_ORIGINS=http://localhost:3000,https://my.production.site
CLIENT_ORIGINS=https://404-speed-not-found-zona-mf54.ya-praktikum.tech

# PostgreSQL Database Configuration
# Используйте тестовые данные только для локальной разработки
# Для локальной разработки: оставьте POSTGRES_HOST пустым или укажите 'localhost'
# Для Docker: укажите 'postgres' (имя сервиса в docker-compose)
POSTGRES_HOST=
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# Client Server URLs (для связи между клиентом и сервером)
EXTERNAL_SERVER_URL=http://localhost:3001
INTERNAL_SERVER_URL=http://server:3001

# Node Environment
NODE_ENV=production

# Node Version (опционально, для Docker build args)
NODE_VERSION=20
