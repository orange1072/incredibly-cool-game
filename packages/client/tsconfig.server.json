{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": false,
    "outDir": "dist/server-ts",
    "rootDir": "server",
    "types": ["node"],
    "noEmit": false
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
