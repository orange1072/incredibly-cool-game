# Server Configuration
SERVER_PORT=3001

# Client Configuration
CLIENT_PORT=3000
# Список разрешенных origin для CORS (ваш продакшен домен)
CLIENT_ORIGINS=https://zombie-shooter.online

# PostgreSQL Database Configuration
# В Docker Compose сервис называется 'postgres', поэтому используем это имя
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<надежный_пароль_для_продакшена>
POSTGRES_DB=postgres

# Client Server URLs
EXTERNAL_SERVER_URL=https://zombie-shooter.online
INTERNAL_SERVER_URL=http://server:3001

# Node Environment
NODE_ENV=production

# Node Version (опционально)
NODE_VERSION=20

# Docker Environment (указывает что мы в Docker)
DOCKER_ENV=true

